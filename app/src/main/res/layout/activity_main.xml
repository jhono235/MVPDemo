<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.mainactivity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRandomUserList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/etNumOfRequestInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter a number"/>

    <EditText
        android:id="@+id/etGenderInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter a gender"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET RESULTS"
        android:onClick="onClick"/>



</LinearLayout>